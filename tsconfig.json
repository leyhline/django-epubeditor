{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "moduleResolution": "bundler",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "static-src/*"
  ]
}
